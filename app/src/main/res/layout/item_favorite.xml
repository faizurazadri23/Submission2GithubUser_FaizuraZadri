<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/size_3"
    android:padding="8dp">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_favorite"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/username_favorite"
        app:layout_constraintVertical_bias="1" />

    <TextView
        android:id="@+id/username_favorite"
        style="@style/size_1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:padding="16dp"
        android:text="@string/username_followers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar_favorite" />

</androidx.constraintlayout.widget.ConstraintLayout>